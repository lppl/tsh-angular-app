{
  "name": "tsh-frontend-app",
  "version": "1.0.0",
  "description": "TSH Developer Test Project",
  "scripts": {
    "dev": "npm run dev:watch-css & npm run dev:watch-javascript & npm run dev:server",
    "dev:server": "lite-server -c config/bs-config.json",
    "dev:watch-css": "postcss ./src/**/*.css -d ./web/build/css/ --watch --map",
    "dev:watch-javascript": "babel src/application.es6 --out-file web/build/js/application.js --watch",
    "minify": "npm run minify:css & npm run minify:js",
    "minify:css": "minify web/build/css/style.css --output web/build/css/style.min.css",
    "minify:js": "minify web/build/js/application.js --output web/build/js/application.min.js"
  },
  "author": "≈Åukasz Pietrek <lpietrek@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "lite-server": "^2.2.2",
    "postcss": "^5.1.2",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.8.0"
  },
  "babel": {
    "extends": "./config/babelrc"
  }
}
